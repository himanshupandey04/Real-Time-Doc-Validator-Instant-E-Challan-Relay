# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/echallan_system
MONGODB_TEST_URI=mongodb://localhost:27017/echallan_test

# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Secret Keys (Change these in production!)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_REFRESH_SECRET=your_super_secret_refresh_token_key_change_this
JWT_EXPIRE=24h
JWT_REFRESH_EXPIRE=7d

# Admin Credentials (First time setup)
ADMIN_EMAIL=admin@echallan.gov.in
ADMIN_PASSWORD=Admin@123456
ADMIN_NAME=System Administrator

# Security
BCRYPT_ROUNDS=10
MAX_LOGIN_ATTEMPTS=5
LOCK_TIME=15

# CORS
FRONTEND_URL=http://localhost:3000

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads
